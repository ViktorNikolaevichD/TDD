[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=siteadmin
WorkingDirectory=/home/siteadmin/sites/SITENAME/source

ExecStart=/home/siteadmin/.cache/pypoetry/virtualenvs/SITENAME*/bin/gunicorn --bind unix:/tmp/SITENAME.socket server.wsgi:application

[Install]
WantedBy=multi-user.target